{
  "name": "bedrock-data-automation",
  "version": "1.0.0",
  "description": "AWS Bedrock Data Automation for audio transcription",
  "scripts": {
    "build": "tsc",
    "build:lambda": "node build-lambda.js",
    "deploy:transcription": "aws lambda update-function-code --function-name adom-inbound-callrecording-transcription --zip-file fileb://deploy-bundled/lambda-transcription-bundled.zip --region us-east-1",
    "deploy:persistence": "aws lambda update-function-code --function-name adom-inbound-callrecording-persistence --zip-file fileb://deploy-bundled/lambda-persistence-bundled.zip --region us-east-1",
    "deploy:retrieval": "aws lambda update-function-code --function-name adom-inbound-callrecording-retrieval --zip-file fileb://deploy-bundled/lambda-retrieval-bundled.zip --region us-east-1"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-data-automation-runtime": "^3.729.0",
    "@aws-sdk/client-dynamodb": "^3.729.0",
    "@aws-sdk/client-s3": "^3.729.0",
    "@aws-sdk/lib-dynamodb": "^3.729.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.10.5",
    "archiver": "^7.0.1",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.2",
    "yarn": "^1.22.22"
  }
}
